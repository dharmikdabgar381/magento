                    </dharmik_datetime>
                    <dharmik_decimal>
                        <table>dharmik_decimal</table>
                    </dharmik_decimal>
                    <dharmik_int>
                        <table>dharmik_int</table>
                    </dharmik_int>
                    <dharmik_text>
                        <table>dharmik_text</table>
                    </dharmik_text>
                    <dharmik_varchar>
                        <table>dharmik_varchar</table>
                    </dharmik_varchar>
                    <dharmik_char>
                        <table>dharmik_char</table>
                    </dharmik_char>
                    <eav_attribute>
                        <table>dharmik_eav_attribute</table>
                    </eav_attribute>
                </entities>
            </dharmik_resource>
        </models>
        <resources>
            <dharmik_setup>
                <setup>
                    <module>Dharmik_Dharmik</module>
                    <class>Dharmik_Dharmik_Model_Resource_Setup</class>
                </setup>
            </dharmik_setup>
        </resources>
