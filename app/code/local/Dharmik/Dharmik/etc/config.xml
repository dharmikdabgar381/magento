<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Dharmik_Dharmik>
            <version>0.0.3</version>
        </Dharmik_Dharmik>
    </modules>
    <global>
        <blocks>
            <dharmik>
                <class>Dharmik_Dharmik_Block</class>
            </dharmik>
        </blocks>
        <helpers>
            <dharmik>
                <class>Dharmik_Dharmik_Helper</class>
            </dharmik>
        </helpers>
        <models>
            <dharmik>
                <class>Dharmik_Dharmik_Model</class>
                <resourceModel>dharmik_resource</resourceModel>
            </dharmik>
            <dharmik_resource>
                <class>Dharmik_Dharmik_Model_Resource</class>
                <entities>
                    <dharmik>
                        <table>dharmik</table>
                    </dharmik>
                    <dharmik_datetime>
