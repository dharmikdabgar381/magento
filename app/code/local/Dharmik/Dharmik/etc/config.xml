    <adminhtml>
        <menu>
            <dharmik>
                <title>Dharmik</title>
                <sort_order>120</sort_order>
                <children>
                    <dharmik>
                        <title>Manage Dharmik</title>
                        <sort_order>100</sort_order>
                        <action>dharmik/Adminhtml_Dharmik</action>
                    </dharmik>
                    <dharmik_attribute>
                        <title>Manage Attribute</title>
                        <sort_order>100</sort_order>
                        <action>dharmik/Adminhtml_Dharmik_Attribute</action>
                    </dharmik_attribute>
                    <dharmik_set>
                        <title>Manage Attribute set</title>
                        <sort_order>100</sort_order>
                        <action>dharmik/Adminhtml_Dharmik_Set</action>
                    </dharmik_set>
                </children>
            </dharmik>
        </menu>
        <layout>
            <updates>
                <dharmik>
                    <file>dharmik.xml</file>
                </dharmik>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <dharmik>
                <use>admin</use>
                <args>
                    <module>Dharmik_Dharmik</module>
                    <frontName>dharmik</frontName>
                </args>
            </dharmik>
        </routers>
    </admin>
