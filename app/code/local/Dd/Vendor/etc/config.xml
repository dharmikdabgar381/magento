<config>
    <modules>
        <Dd_Vendor>    
            <version>1.1.0</version>
        </Dd_Vendor>
    </modules>
    <frontend>
        <layout>
            <updates>
                <Vendor module="Dd_Vendor">
                    <file>Dd_Vendor.xml</file>
                </Vendor>
            </updates>
        </layout>
    </frontend>
    <global>
        <resources>
            <vendor_setup>
                <setup>
                    <module>Dd_Vendor</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vendor_setup>
            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>
            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
        </resources>        
        <models>
            <vendor>
                <class>Dd_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>Dd_Vendor_Model_Resource</class>
                <deprecatedNode>vendor_mysql4</deprecatedNode>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>
                    <vendor_address>
                        <table>vendor_address</table>
                    </vendor_address>
                </entities>
            </vendor_resource>
        </models>
        <blocks>
            <vendor>
                <class>Dd_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
           <vendor>
                  <class>Dd_vendor_Helper</class>
            </vendor>
        </helpers>
    </global>
    <admin>
        <!-- <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Dd_Vendor>Dd_Vendor_Adminhtml</Dd_Vendor>
                    </modules>
                </args>
            </adminhtml>
        </routers> -->
        <routers>
            <Vendor>
                <use>admin</use>
                <args>
                    <module>Dd_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </Vendor>
        </routers>
         <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </admin>
</config>